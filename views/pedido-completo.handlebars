<script>
function imprimirComprovante() {
    const comprovante = document.getElementById('comprovanteImpressao').innerHTML;
    const janelaImpressao = window.open('', '_blank');
    janelaImpressao.document.write(`
        <html>
            <head>
                <title>Comprovante - Pedido #{{timestamp}}</title>
                <style>
                    body {
                        font-family: 'Courier New', monospace;
                        max-width: 300px;
                        margin: 20px auto;
                        font-size: 12px;
                    }
                    .header-impressao {
                        text-align: center;
                        margin-bottom: 15px;
                    }
                    .header-impressao h2 {
                        margin: 5px 0;
                        font-size: 16px;
                    }
                    .header-impressao p {
                        margin: 3px 0;
                    }
                    hr {
                        border: none;
                        border-top: 1px dashed #000;
                        margin: 10px 0;
                    }
                    h3 {
                        margin: 10px 0 5px 0;
                        font-size: 13px;
                    }
                    p {
                        margin: 3px 0;
                    }
                    @media print {
                        body {
                            margin: 0;
                        }
                    }
                </style>
            </head>
            <body>
                ${comprovante}
            </body>
        </html>
    `);
    janelaImpressao.document.close();
    janelaImpressao.print();
}

function novoPedido() {
    if (confirm('Deseja fazer um novo pedido?')) {
        localStorage.removeItem('pedidoAtual');
        window.location.href = '/';
    }
}

// Limpar localStorage ap√≥s exibir confirma√ß√£o
localStorage.removeItem('pedidoAtual');
</script>

