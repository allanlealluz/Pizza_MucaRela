{{!-- pedido-completo.handlebars --}}
<div class="container">
    <div class="cabecalho-pedido">
        <h1>üçï Pedido Confirmado!</h1>
        <p class="status-pedido">Seu pedido foi recebido com sucesso</p>
    </div>

    <div class="detalhes-pedido">
        {{!-- Se√ß√£o da Pizza --}}
        <div class="secao-pizza">
            <h2>üçï Sua Pizza</h2>
            <div class="item-pedido">
                <div class="info-item">
                    <h3>Tamanho:</h3>
                    <p>{{tamanho}}</p>
                </div>
                
                <div class="info-item">
                    <h3>Sabores:</h3>
                    {{#if sabores}}
                        <ul class="lista-sabores">
                            {{#each sabores}}
                                <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    {{else}}
                        <p>Nenhum sabor selecionado</p>
                    {{/if}}
                </div>

                <div class="info-item">
                    <h3>Borda:</h3>
                    <p>{{borda}}</p>
                </div>

                {{#if adicionais}}
                    <div class="info-item">
                        <h3>Adicionais:</h3>
                        <ul class="lista-adicionais">
                            {{#each adicionais}}
                                <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                {{/if}}

                <div class="total-item">
                    <strong>Total Pizza: R$ {{totalPizza}}</strong>
                </div>
            </div>
        </div>

        {{!-- Se√ß√£o das Bebidas --}}
        {{#if bebidas}}
            <div class="secao-bebidas">
                <h2>ü•§ Suas Bebidas</h2>
                <div class="lista-bebidas">
                    {{#each bebidas}}
                        <div class="bebida-item">
                            <div class="bebida-info">
                                <span class="quantidade">{{quantidade}}x</span>
                                <span class="nome">{{nome}}</span>
                                <span class="preco-unitario">(R$ {{preco}} cada)</span>
                            </div>
                            <div class="bebida-subtotal">
                                R$ {{subtotal}}
                            </div>
                        </div>
                    {{/each}}
                </div>
                <div class="total-bebidas">
                    <strong>Total Bebidas: R$ {{totalBebidas}}</strong>
                </div>
            </div>
        {{else}}
            <div class="secao-bebidas">
                <h2>ü•§ Bebidas</h2>
                <p class="sem-bebidas">Nenhuma bebida selecionada</p>
            </div>
        {{/if}}

        {{!-- Total Geral --}}
        <div class="total-geral">
            <h2>üí∞ Total do Pedido: R$ {{totalGeral}}</h2>
        </div>
    </div>

    {{!-- Informa√ß√µes de Entrega/Retirada --}}
    <div class="info-entrega">
        <h3>üìç Pr√≥ximos Passos</h3>
        <div class="passos">
            <div class="passo">
                <span class="numero">1</span>
                <p>Seu pedido foi registrado com sucesso</p>
            </div>
            <div class="passo">
                <span class="numero">2</span>
                <p>Tempo estimado de preparo: 30-45 minutos</p>
            </div>
            <div class="passo">
                <span class="numero">3</span>
                <p>Entraremos em contato para confirmar os dados de entrega</p>
            </div>
        </div>
    </div>

    {{!-- Resumo para Impress√£o --}}
    <div class="resumo-impressao" id="resumoImpressao">
        <div class="cabecalho-impressao">
            <h2>üçï Pizzaria MucaRoela</h2>
            <p>Pedido #{{timestamp}}</p>
            <hr>
        </div>
        
        <div class="detalhes-impressao">
            <h3>PIZZA:</h3>
            <p>Tamanho: {{tamanho}}</p>
            <p>Borda: {{borda}}</p>
            <p>Sabores: {{#each sabores}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</p>
            {{#if adicionais}}
                <p>Adicionais: {{#each adicionais}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</p>
            {{/if}}
            <p>Subtotal Pizza: R$ {{totalPizza}}</p>
            
            {{#if bebidas}}
                <hr>
                <h3>BEBIDAS:</h3>
                {{#each bebidas}}
                    <p>{{quantidade}}x {{nome}} - R$ {{subtotal}}</p>
                {{/each}}
                <p>Subtotal Bebidas: R$ {{totalBebidas}}</p>
            {{/if}}
            
            <hr>
            <h3>TOTAL: R$ {{totalGeral}}</h3>
        </div>
    </div>

    {{!-- Bot√µes de A√ß√£o --}}
    <div class="acoes-pedido">
        <button onclick="imprimirPedido()" class="btn-imprimir">üñ®Ô∏è Imprimir Pedido</button>
        <button onclick="novoPedido()" class="btn-novo-pedido">üçï Fazer Novo Pedido</button>
        <button onclick="window.location.href='/'" class="btn-inicio">üè† Voltar ao In√≠cio</button>
    </div>
</div>

<script>
function imprimirPedido() {
    const resumo = document.getElementById('resumoImpressao').innerHTML;
    const novaJanela = window.open('', '_blank');
    novaJanela.document.write(`
        <html>
            <head>
                <title>Pedido - Pizzaria MucaRoela</title>
                <style>
                    body { font-family: Arial, sans-serif; margin: 20px; }
                    .cabecalho-impressao { text-align: center; margin-bottom: 20px; }
                    .cabecalho-impressao h2 { margin: 0; color: #d32f2f; }
                    hr { border: 1px solid #ccc; margin: 10px 0; }
                    h3 { color: #333; margin: 15px 0 5px 0; }
                    p { margin: 5px 0; }
                </style>
            </head>
            <body>
                ${resumo}
            </body>
        </html>
    `);
    novaJanela.document.close();
    novaJanela.print();
}

function novoPedido() {
    if (confirm('Deseja fazer um novo pedido? Isso ir√° limpar o pedido atual.')) {
        window.location.href = '/';
    }
}

// Adicionar timestamp para o n√∫mero do pedido
document.addEventListener('DOMContentLoaded', function() {
    const timestamp = new Date().getTime();
    const timestampElements = document.querySelectorAll('#resumoImpressao .cabecalho-impressao p');
    if (timestampElements.length > 0) {
        timestampElements[0].textContent = `Pedido #${timestamp}`;
    }
});
</script>

